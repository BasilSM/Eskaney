                        </div>
                    </form>*@
                </div>
            </div>
        </nav>


        @RenderSection("Body")

        <!-- Footer -->
        <footer class="page-footer font-small cyan darken-3">

            <!-- Footer Elements -->
            <div class="container" style="height:53px;">

                <!-- Grid row-->
                <div class="row">

                    <!-- Grid column -->
                    <div class="col-md-12 py-0">
                        <div class="mb-4 flex-center">

                            <!-- Facebook -->
                            <a id="fbLogo" class="fb-ic">
                                <i class="fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
                            </a>

                            <!-- Google +-->
                            <a id="ELogo" class="gplus-ic" href="mailto:Basilmsami@gmail.com?subject=The%20subject%20of%20the%20mail" target="_blank">
