

@{
    ViewBag.Title = "Home";
    Layout = "~/Areas/Home/Views/Shared/_Home.cshtml";
}

@section Head{
    <script>
        $(document).ready(function () {

            $("#Home").addClass("active");

            $("#myForm").addClass("none");


            $("#animate").animate({
                top: '50%',
                left: '600px',
                borderRadius: '15px'
            },2000);
        });


        function myFunction() {
            var x = document.getElementById("myDIV");
            var y = document.getElementById("HomeImage")
            if (x.style.display === "none") {
                y.style.display = "none";
                x.style.display = "block";
            } else {
                y.style.display = "block";
                x.style.display = "none";
            }
        }


    </script>

    <style>

        @@media (min-width: 768px) {
            .col-md-4 {
                -ms-flex: 0 0 33.333333%;
                flex: 0 0 33.333333%;
                max-width: 33.333333%;
                margin-top: 160px;
            }
        }

        @@media (min-width: 1200px) {
            .mt-xl-5, .my-xl-5 {
                margin-top: 13% !important;
            }
        }

        @@media (min-width: 1200px) {
            .mt-xl-8 {
                margin-top: 15rem !important;
            }
        }

        @@media (min-width: 425px) and (max-width: 576px) {
            .mask {
                height: 684px;
            }

            .text {
                margin-top: 100px;
            }
        }

        @@media (max-width: 1440px) and (min-width: 1025px) {
            .mask {
                height: 557px;
            }
        }

        @@media (max-width: 424px) and (min-width: 376px) {
            .mask {
                height: 470px;
            }
        }

        @@media (max-width: 1024px) and (min-width: 767px) {
            .mask {
                height: 470px;
            }

            .text {
                margin-top: 70px;
            }
        }

        @@media (max-width: 767px) {
            .text {
                margin-top: 100px;
            }
        }

        @@media(max-width: 740px) {
            html, body, header, .view {
                height: 790px;
            }
        }
    </style>


}

@section Body{



    <!-- Full Page Intro -->

    <div class="" style="background-image: url('../../../../Image/architecture.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        ">
        <!-- Mask & flexbox options-->
        <div class="mask rgba-gradient align-items-center" style="">

            <div class="container">
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="text col-md-6 white-text text-center text-md-left mt-xl-5 mb-5 wow fadeInLeft" data-wow-delay="0.3s">
                        <h1 class="h1-responsive font-weight-bold mt-sm-5">Eskaney </h1>
                        <hr class="hr-light">
                        <h4 class="mb-4">
                            Help you to create your real estate more regularly
                            and manage your project expenses easily
                            and more accurately and keep your information when you need it..
                            </h4>
                            <a class="btn btn-white" id="Login" href="@Url.Action("Login" , "Home" , new { area="Home" })" style="border-radius: 15px 0px;">Login</a>
                            <a class="btn btn-outline-white" style="border-radius: 0px 15px;">Take a tour</a>
                            <a class="btn btn-blue" href="@Url.Action("Home" , "Apartments" , new { area="Apartments" })" style="border-radius: 15px 0px;">For Sale</a>

                            <a class="btn btn-blue" onclick="myFunction()" style="border-radius: 15px 15px;margin-left: 1115px;margin-top: 35px;padding:0px;"><img src="~/Image/iconfinder_messages_16_171351.png" style="width: 45px;" /></a>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div id="animate" class="col-lg-5 col-md-4 col-xl-5 mt-xl-6 mt-md-6 col-sm-9 offset-md-1 offset-sm-1 col-10 offset-1 mt-xl-8 wow fadeInRight d-none d-lg-block d-xl-block" data-wow-delay="0.3s" style="padding: 0;margin-top: -50%;margin-left:-400px;">
                        @*<img src="https://mdbootstrap.com/img/Mockups/Transparent/Small/admin-new.png" alt="" class="img-fluid">*@

                        <img id="HomeImage" src="~/Image/HomePage.png" alt="" class="img-fluid" style="height: 230px;width: 100%;" />


                        <iframe id="myDIV" src="https://powerva.microsoft.com/webchat/bots/0677717b-cfd0-4347-91ed-0e59acf3b36d" frameborder="0" style="width: 100%; height: 415px; display: none; margin-top: -155px;"></iframe>
                        
                    </div>



                    <!--Grid column-->
                    <div class="col-lg-5 col-md-4 col-xl-5 mt-xl-6 mt-md-6 col-sm-9 offset-md-1 offset-sm-1 col-10 offset-1 mt-xl-8 wow fadeInRight d-block d-sm-block d-md-block d-lg-block d-xl-none" data-wow-delay="0.3s" style="padding: 0;">
                        @*<img src="https://mdbootstrap.com/img/Mockups/Transparent/Small/admin-new.png" alt="" class="img-fluid">*@

                        <img src="~/Image/HomePage.png" alt="" class="img-fluid" style="height: 230px;width: 100%;" />
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </div>
            <!-- Content -->
        </div>


    </div>




}


