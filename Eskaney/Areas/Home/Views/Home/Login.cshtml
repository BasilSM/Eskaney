        @@media (min-width: 740px) and (max-width: 1022px) {
            .wrap-login100 {
                padding-bottom: 0px;
                margin-top: 20px;
            }

            .login100-form-title {
                padding: 10px;
            }
        }

        
            .container-login100 {
                margin-top: 30px;
            }
        
    </style>

    <script type="text/javascript">


        function openForm() {
            document.getElementById("myForm").style.display = "block";
        }

        function closeForm() {
            document.getElementById("myForm").style.display = "none";
        }



        // Stop going back after log off
        debugger;
        window.onload = function () { Clear(); }
        function Clear() {
            var Backlen = history.length;
            if (Backlen > 0) history.go(-Backlen);
        }
        /*******************************/





    </script>

    <style>
        @@media (max-width: 750px) {

            #homeImg {
                visibility: hidden;
            }
        }

        @@media (max-width: 750px) {

            .login100-form-title {
                line-height: 0.0;
            }
        }


        @@media (min-width: 320px) and (max-width: 576px) {
            .mask {
                height: 870px;
            }

            .wrap-login100 {
                margin-left: 0;
            }

        }

        @@media (max-width: 1440px) and (min-width: 1025px) {
            .container-login100 {
                 margin-top: 0; 
            }
            .wrap-login100 {
                padding-bottom: 0px;
                margin-top: 65px;
            }
        }

        @@media (max-width: 424px) and (min-width: 376px) {
            .mask {
                height: 470px;
            }
        }

        @@media (max-width: 1024px) and (min-width: 767px) {
            .mask {
                height: 580px;
            }

        }



        @@media(max-width: 740px) {
            html, body, header, .view {
                height: 790px;
