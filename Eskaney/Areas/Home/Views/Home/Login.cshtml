            .wrap-input100{
                margin-bottom: 10px;
            }

            .contact100-form-checkbox{
                padding-bottom: 10px;
            }
        }

        @@media (min-width: 1200px) {
            .mt-xl-5, .my-xl-5 {
                margin-top: 13% !important;
            }

