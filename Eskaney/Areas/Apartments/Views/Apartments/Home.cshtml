@*@model IEnumerable<Eskaney.Models.Apartment>*@
@model IEnumerable<Eskaney.Models.ViewModel>

@*@model Eskaney.Models.ViewModel*@


@{
    ViewBag.Title = "Home";
    Layout = "~/Areas/Home/Views/Shared/_Home.cshtml";
}

@section Head{
    <style>
        body {
            background-color: #b7d0e8;
        }
    </style>

    <script type="text/javascript">




        $(document).ready(function () {

            $("#animate").animate({
                top: '50%',
                left: '600px',
                borderRadius: '15px'
            }, 2000);

        });


    </script>
}


@section Body{

    <div class="mask rgba-gradient align-items-center">
        <!-- Mask & flexbox options-->
        <div class="" style="padding-top: 1px;">
            <div class="container" style=" margin-top: 130px;">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-3">
                            <!-- Card Wider -->
                            <div class="card card-cascade wider" style="margin-bottom: 50px;">

                                <!-- Card image -->
                                <div class="view view-cascade overlay">
                                    <img class="card-img-top" src="~/Image/blog/latest-3.jpg" alt="Card image cap">
                                    <a href="#!">
                                        <div class="mask rgba-white-slight"></div>
                                    </a>
                                </div>

                                <!-- Card content -->
                                <div class="card-body card-body-cascade text-center pb-0" style="background-color: #a6b0bf;">
                                    <img src="@TempData["Pic"]" />
                                    <!-- Title -->
                                    <h4 class="card-title"><strong>Alison Belmont</strong></h4>
                                    <!-- Subtitle -->
                                    <h5 class="blue-text pb-2"><strong style="color: mediumblue;">Graffiti Artist</strong></h5>
                                    <hr />
                                    <!-- Text -->
                                    <h2>@item.Housing.Project_Name</h2>
                                    <p class="card-text">
                                        About This Apartment..

                                        @item.Apartment.Notes
                                    </p>


                                    <p>Apart. Area : @item.Apartment.Area M<sup>2</sup></p>

                                    <p>Apart. Floor Number : @item.Apartment.Floor_Number</p>

                                    <p>Apart. Number of Room : @item.Apartment.Number_Of_Room</p>

                                    <p>Apart. Number of Bathroom : @item.Apartment.Number_Of_BathRoom</p>

                                    City : <lable id="txtCity"> @item.City.Name</lable><br />

                                    Location : <lable id="txtLocation"> @item.Housing.Location</lable><br /><hr />

                                    Phone : @item.Apartment.Phone
                                    <!-- Card footer -->
                                    <div class="card-footer text-muted text-center mt-4">
                                        <!-- Mobile -->
                                        <a class="px-2 fa-lg li-ic"><i class="fas fa-mobile-alt"></i></a>
                                        <!-- SMS -->
                                        <a class="px-2 fa-lg tw-ic"><i class="fas fa-sms"></i></a>

                                    </div>

                                </div>

                            </div>
                            <!-- Card Wider -->
                        </div>
                    }


                    @*<center>
                        <strong>
                            Test City
                        </strong>
                    </center>

                    <table class="table">
                        <tr>
                            <td>Housing Namr</td>
                            <td>City</td>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Apartment.Number_Of_Room</td>
                                <td>@item.City.Name</td>
                            </tr>
                        }
                    </table>*@

                </div>
            </div>
        </div>
    </div>
}

