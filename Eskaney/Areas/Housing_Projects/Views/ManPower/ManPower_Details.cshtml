@model IEnumerable<Eskaney.Models.ManPowerCoust>

@{
    ViewBag.Title = "ManPower Details";
    Layout = "~/Areas/Housing_Projects/Views/Shared/_Home.cshtml";
}

@section Head{


    <script type="text/javascript">

        $(document).ready(function () {

            $("#ManPower").addClass("active");

            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');

            var Housing_ID = '@TempData["HousingID"]';

            
           
        });

        
        </script>


    <style>
        table.dataTable thead .sorting:after,
        table.dataTable thead .sorting:before,
        table.dataTable thead .sorting_asc:after,
        table.dataTable thead .sorting_asc:before,
        table.dataTable thead .sorting_asc_disabled:after,
        table.dataTable thead .sorting_asc_disabled:before,
        table.dataTable thead .sorting_desc:after,
        table.dataTable thead .sorting_desc:before,
        table.dataTable thead .sorting_desc_disabled:after,
        table.dataTable thead .sorting_desc_disabled:before {
            bottom: .5em;
        }

        tr {
            text-align: center;
        }

        th {
            background-color: #464a5d;
        }
    </style>

}

@section Body{

    <h1 class="text-center">ManPower Details</h1>
    <h1 id="total"></h1>
    <div class="card mb-4">
        <div class="card-header"><h4 style="cursor: default;"><i style="margin-right: 20px;" class="fas fa-tools mr-4"></i>ManPower Details</h4></div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="dtBasicExample" class="table table-fixed table-bordered table-sm" cellspacing="0" width="100%" @*id="tblManPower" class="table table-striped table-bordered table-sm" width="100%" cellspacing="0" style="text-align:center;"*@>
                    <thead style="background-color: #a2a0a0;color: white;">
                        <tr>
                            <th class="th-sm" style="width:5px"></th>
                            <th class="th-sm" style="width:60px">Name</th>
                            <th class="th-sm">Parson Name</th>
                            <th class="th-sm">Labour Name</th>
                            <th class="th-sm" style="width:70px">Phone</th>
                            <th class="th-sm" style="width:60px">Date</th>
                            <th class="th-sm" style="width:60px">Coust</th>
                            <th class="th-sm">Payment Vau.</th>
                            <th class="th-sm">Notes</th>
                            <th class="th-sm"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{int x = 1;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @x </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.housing.Project_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Parson_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Labour_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Parson_Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Coust)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Payment_Vaucher)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Notes)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "ManPower", new { id = item.ID, @class = item.Housing_ID })" style="color: blue;">
                                        <i class="fas fa-edit"></i>
                                        Edit
                                    </a>
                                    |
                                    <a href="@Url.Action("Delete", "ManPower", new { id = item.ID })" style="color: red;">
                                        <i class="fas fa-trash"></i>
                                        Delete
                                    </a>
                                </td>
                            </tr>

                            x++;
                        }

                    </tbody>

                    <tfoot style="background-color: #a2a0a0;color: white;">
                        <tr>
                            <th style="width:5px"></th>
                            <th style="width:60px">Name</th>
                            <th>Parson Name</th>
                            <th>Labour Name</th>
                            <th style="width:70px">Phone</th>
                            <th style="width:60px">Date</th>
                            <th style="width:60px">Coust</th>
                            <th>Payment Vaucher</th>
                            <th>Notes</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
   

}
